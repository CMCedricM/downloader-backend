// database
datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// generator
generator client {
    provider             = "prisma-client-py"
    recursive_type_depth = 5
}

model User {
    id            Int            @id @default(autoincrement())
    email         String
    userFullName  String
    DataOwnership DataOwnership?
}

model UserPreferences {
    id                Int            @id @default(autoincrement())
    userEmail         String
    DataOwnerhsip     DataOwnership? @relation(fields: [DataOwnershipId], references: [id])
    DataOwnershipId   Int?
    DestinationFolder String
	@@map("UserPreferenes")
}

model DataOwnership {
    id             Int              @id @default(autoincrement())
    user           User             @relation(fields: [userId], references: [id])
    userId         Int              @unique
    UserPlaylist   UserPlaylist[]
    Video          Video[]
    UserPreferenes UserPreferences[]
}

enum PLAYLISTSTATUS {
    Active
    Inactive
}

model UserPlaylist {
    id              Int            @id @default(autoincrement())
    ownership       DataOwnership? @relation(fields: [dataOwnershipId], references: [id])
    dataOwnershipId Int?
    PlayListTitle   String
    PlayListURL     String
    LastSynced      String?
    Status          PLAYLISTSTATUS @default(Active)
    DateCreated     DateTime       @default(now())
    DateUpdated     DateTime       @updatedAt
}

model Video {
    id              Int           @id @default(autoincrement())
    YT_Identifier   String
    Video_Title     String?
    ownership       DataOwnership @relation(fields: [dataOwnershipId], references: [id], onDelete: Cascade)
    dataOwnershipId Int
    VideoURL        String
    Comments        String?
    DateCreated     DateTime      @default(now())
}
